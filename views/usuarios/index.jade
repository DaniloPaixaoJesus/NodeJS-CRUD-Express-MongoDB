extends ../layout

block content
	h1 List of Users
	hr
	br
	if messages.info
		div(class="alert alert-info") 
			p=messages.info
	br
	a(href="/usuarios/create" title="New User", class="btn btn-success") New User
	br
	br
	table(class="table well")
		thread
			tr
				th ID
				th Name
				th Login
				th Date
				th Action
		tbody
			each user, i in listUser 
				tr
					td #{user._id}
					td #{user.name}
					td #{user.login}
					td #{moment(user.date_cad).format('DD/MM/YYYY')}
					td
						a(href="/usuarios/edit/#{user._id}", title="Edit", class="btn btn-info btn-sm")
							span(class="glyphicon glyphicon-pencil")
						&nbsp
						a(href="/usuarios/show/#{user._id}", title="Edit", class="btn btn-primary btn-sm")
							span(class="glyphicon glyphicon-search")
						&nbsp
						//
							form(method="POST", action="/usuarios/delete/#{user._id}", role="form")
								input(type="hidden", name="_method", value="delete")
								input(type="submit", name="delete", value="Delete", class="btn btn-danger  btn-sm")